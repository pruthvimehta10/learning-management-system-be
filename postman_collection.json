{
    "info": {
        "_postman_id": "b3e51084-2117-4581-807d-53120155606e",
        "name": "LMS Auth & RBAC Tests",
        "description": "Collection to test JWT Authentication and Role-Based Access Control for the Learning Management System.",
        "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
    },
    "item": [
        {
            "name": "1. Setup & Tokens",
            "item": [
                {
                    "name": "Generate ADMIN Token",
                    "event": [
                        {
                            "listen": "test",
                            "script": {
                                "exec": [
                                    "var jsonData = pm.response.json();",
                                    "pm.environment.set(\"admin_token\", jsonData.token);",
                                    "pm.test(\"Token generated\", function () {",
                                    "    pm.response.to.have.status(200);",
                                    "    pm.expect(jsonData.token).to.not.be.undefined;",
                                    "});"
                                ],
                                "type": "text/javascript"
                            }
                        }
                    ],
                    "request": {
                        "method": "POST",
                        "header": [
                            {
                                "key": "Content-Type",
                                "value": "application/json"
                            }
                        ],
                        "body": {
                            "mode": "raw",
                            "raw": "{\n    \"role\": \"admin\",\n    \"sub\": \"test_admin_user\"\n}"
                        },
                        "url": {
                            "raw": "{{base_url}}/api/dev/generate-token",
                            "host": [
                                "{{base_url}}"
                            ],
                            "path": [
                                "api",
                                "dev",
                                "generate-token"
                            ]
                        }
                    },
                    "response": []
                },
                {
                    "name": "Generate CLIENT Token",
                    "event": [
                        {
                            "listen": "test",
                            "script": {
                                "exec": [
                                    "var jsonData = pm.response.json();",
                                    "pm.environment.set(\"client_token\", jsonData.token);",
                                    "pm.test(\"Token generated\", function () {",
                                    "    pm.response.to.have.status(200);",
                                    "    pm.expect(jsonData.token).to.not.be.undefined;",
                                    "});"
                                ],
                                "type": "text/javascript"
                            }
                        }
                    ],
                    "request": {
                        "method": "POST",
                        "header": [
                            {
                                "key": "Content-Type",
                                "value": "application/json"
                            }
                        ],
                        "body": {
                            "mode": "raw",
                            "raw": "{\n    \"role\": \"client\",\n    \"sub\": \"test_client_user\"\n}"
                        },
                        "url": {
                            "raw": "{{base_url}}/api/dev/generate-token",
                            "host": [
                                "{{base_url}}"
                            ],
                            "path": [
                                "api",
                                "dev",
                                "generate-token"
                            ]
                        }
                    },
                    "response": []
                }
            ]
        },
        {
            "name": "2. Admin Access Tests",
            "item": [
                {
                    "name": "Get Admin Page (As Admin) -✅ SHOULD PASS",
                    "request": {
                        "method": "GET",
                        "header": [
                            {
                                "key": "Authorization",
                                "value": "Bearer {{admin_token}}"
                            }
                        ],
                        "url": {
                            "raw": "{{base_url}}/admin",
                            "host": [
                                "{{base_url}}"
                            ],
                            "path": [
                                "admin"
                            ]
                        }
                    },
                    "response": []
                },
                {
                    "name": "Get Admin Page (As Client) - ❌ SHOULD FAIL (403)",
                    "event": [
                        {
                            "listen": "test",
                            "script": {
                                "exec": [
                                    "pm.test(\"Status code is 403 Forbidden\", function () {",
                                    "    pm.response.to.have.status(403);",
                                    "});"
                                ],
                                "type": "text/javascript"
                            }
                        }
                    ],
                    "request": {
                        "method": "GET",
                        "header": [
                            {
                                "key": "Authorization",
                                "value": "Bearer {{client_token}}"
                            }
                        ],
                        "url": {
                            "raw": "{{base_url}}/admin",
                            "host": [
                                "{{base_url}}"
                            ],
                            "path": [
                                "admin"
                            ]
                        }
                    },
                    "response": []
                }
            ]
        },
        {
            "name": "3. Client/API Access Tests",
            "item": [
                {
                    "name": "Get Courses (As Client) - ✅ SHOULD PASS",
                    "event": [
                        {
                            "listen": "test",
                            "script": {
                                "exec": [
                                    "pm.test(\"Status code is 200\", function () {",
                                    "    pm.response.to.have.status(200);",
                                    "});"
                                ],
                                "type": "text/javascript"
                            }
                        }
                    ],
                    "request": {
                        "method": "GET",
                        "header": [
                            {
                                "key": "Authorization",
                                "value": "Bearer {{client_token}}"
                            }
                        ],
                        "url": {
                            "raw": "{{base_url}}/api/courses",
                            "host": [
                                "{{base_url}}"
                            ],
                            "path": [
                                "api",
                                "courses"
                            ]
                        }
                    },
                    "response": []
                },
                {
                    "name": "Get Courses (No Token) - ❌ SHOULD FAIL (401)",
                    "event": [
                        {
                            "listen": "test",
                            "script": {
                                "exec": [
                                    "pm.test(\"Status code is 401 Unauthorized\", function () {",
                                    "    pm.response.to.have.status(401);",
                                    "});",
                                    "pm.test(\"Error message present\", function () {",
                                    "    var jsonData = pm.response.json();",
                                    "    pm.expect(jsonData.error).to.eql(\"Authentication required\");",
                                    "});"
                                ],
                                "type": "text/javascript"
                            }
                        }
                    ],
                    "request": {
                        "method": "GET",
                        "header": [],
                        "url": {
                            "raw": "{{base_url}}/api/courses",
                            "host": [
                                "{{base_url}}"
                            ],
                            "path": [
                                "api",
                                "courses"
                            ]
                        }
                    },
                    "response": []
                }
            ]
        }
    ],
    "variable": [
        {
            "key": "base_url",
            "value": "http://localhost:3000",
            "type": "string"
        },
        {
            "key": "admin_token",
            "value": "",
            "type": "string"
        },
        {
            "key": "client_token",
            "value": "",
            "type": "string"
        }
    ]
}